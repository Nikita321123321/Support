<Window x:Class="Соц_поддержка.Сотрудники"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Соц_поддержка"
        mc:Ignorable="d"
        Title="Сотрудники" Height="686" Width="1321" WindowStartupLocation="CenterScreen" FontFamily="Sitka Small" FontSize="14">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#FF386499" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <DataGrid x:Name="workerTable" HorizontalAlignment="Left" Height="635" Margin="353,10,0,0" VerticalAlignment="Top" Width="950" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" x:Name="id" Binding="{Binding id}" Header="Код"/>
                <DataGridTextColumn Width="*" x:Name="surename" Binding="{Binding Surename}" Header="Фамилия"/>
                <DataGridTextColumn Width="*" x:Name="name" Binding="{Binding Name}" Header="Имя"/>
                <DataGridTextColumn Width="*" x:Name="lastname" Binding="{Binding Lastname}" Header="Отчество"/>
                <DataGridTextColumn Width="*" x:Name="gender" Binding="{Binding id_Gender}" Header="Код пола"/>
                <DataGridTextColumn Width="*" x:Name="speciality" Binding="{Binding id_Speciality}" Header="Код специальности"/>
                <DataGridTextColumn Width="*" x:Name="phone" Binding="{Binding Phone}" Header="Телефон"/>
                <DataGridTextColumn Width="*" x:Name="birthday" Binding="{Binding Birthday}" Header="День рождения"/>
                <DataGridTextColumn Width="*" x:Name="email" Binding="{Binding Email}" Header="Email"/>
            </DataGrid.Columns>
        </DataGrid>
        <Image Margin="101,10,1069,520" Source="icons8-идентифицированный-пользователь-мужчина-100.png" Stretch="Fill"/>
        <TextBox x:Name="search" HorizontalAlignment="Left" Height="45" Margin="10,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Background="White" FontSize="24" FontFamily="Sitka Small">
            <TextBox.Template>
                <ControlTemplate>
                    <Border CornerRadius="12" Padding="2" BorderThickness="1" BorderBrush="Black">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost" />
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <Button Content="Поиск" HorizontalAlignment="Left" Margin="26,210,0,0" VerticalAlignment="Top" Width="294" Height="45" FontFamily="Sitka Small" FontSize="24" Background="#FF4F4F4F" Foreground="White"/>
        <Button Content="Фильтрация" HorizontalAlignment="Left" Margin="26,343,0,0" VerticalAlignment="Top" Width="294" Height="45" FontFamily="Sitka Small" FontSize="24" Background="#FF4F4F4F" Foreground="White"/>
        <Label Content="Только сотрудники отделов" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button HorizontalAlignment="Left" Margin="10,600,0,0" VerticalAlignment="Top" Width="58" Height="45" FontFamily="Sitka Small" FontSize="24" Background="White" Foreground="White" Click="Button_Click">
            <Image Height="45" Source="icons8-налево-60.png" Stretch="Fill" Width="58"/>
        </Button>

    </Grid>
</Window>
